{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://monolicense.dev/schemas/scan-error.json",
  "title": "MonoLicense Scan Error",
  "description": "JSON schema for scan error output",
  "type": "object",
  "required": ["error"],
  "additionalProperties": false,
  "properties": {
    "error": {
      "type": "object",
      "required": ["type", "message"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LOCKFILE_NOT_FOUND",
            "LOCKFILE_PARSE_ERROR",
            "WORKSPACE_CONFIG_NOT_FOUND",
            "WORKSPACE_CONFIG_PARSE_ERROR",
            "INVALID_LOCKFILE_VERSION",
            "PROJECT_NOT_FOUND",
            "PACKAGE_JSON_PARSE_ERROR",
            "UNEXPECTED_ERROR"
          ],
          "description": "Error type identifier"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "path": {
          "type": "string",
          "description": "File path related to the error"
        },
        "line": {
          "type": "integer",
          "minimum": 1,
          "description": "Line number for parse errors"
        },
        "expected": {
          "type": "string",
          "description": "Expected value (for version mismatch errors)"
        }
      }
    }
  }
}
